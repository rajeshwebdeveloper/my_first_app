<body bgcolor='cyan'>
	<h1 align='center'>Hello World!!!</h1>
	<%= form_for @user do |f|%>

		<%= f.label :user_name%>:
		<%= f.text_field :user_name%><br/><br />
		<%= f.label :password%>:
		<%= f.password_field :password%><br/><br/>
		<%= f.label :email%>:
		<%= f.text_field :email%><br/>
		<%= f.submit :click%>

	<%end%>
</body>